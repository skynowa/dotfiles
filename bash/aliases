# ==============================================================================
# Aliases
# ==============================================================================

# ------------------------------------------------------------------------------
# BASH editing
# ------------------------------------------------------------------------------

# Reload BASH rc file
alias reload='. ~/.bashrc'

# Edit BASH aliases
alias ea='vim ~/dotfiles/bash/aliases && reload'

# ------------------------------------------------------------------------------
# General Commands and Shortcuts
# ------------------------------------------------------------------------------

# Show history
alias h='history'

# Exit
alias e='exit'

# Make directory with parents
alias md='mkdir -p'

# ------------------------------------------------------------------------------
# Utility
# ------------------------------------------------------------------------------

# Show processes by CPU
alias tu='top -o cpu'

# Show processes by memory
alias tm='top -o vsize'

# File size
alias fs='stat -f \"%z bytes\"'

# ROT13-encode and decode text
alias rot13='tr a-zA-Z n-za-mN-ZA-M'

# todo.sh shortcut (https://github.com/ginatrapani/todo.txt-cli)
alias t='todo.sh -d ~/.todo.cfg'

# Trim new lines and copy to clipboard
if [[ "$OSTYPE" =~ ^darwin ]]; then
  alias c="tr -d '\n' | pbcopy"
fi

# Print pwd as directory tree
if [ ! -x "$(which tree 2>/dev/null)" ]; then
  alias tree="find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"
fi

# Using Linux, alias `xdg-open` to act like Darwin's `open`
# If using Cygwin on Windoze, alias `cygstart`
if [[ "$OSTYPE" =~ ^linux ]]; then
  alias open="xdg-open"
elif [[ "$OSTYPE" == cygwin ]]; then
  alias open="cygstart"
fi

# ------------------------------------------------------------------------------
# Changing directories
# ------------------------------------------------------------------------------

# Go to the last directory CDed from
alias cdd='cd -'

# Move up one dir
alias ..='cd ..'

# Move up two dirs
alias ...='cd ../..'

# Go back to home
alias ~='cd ~'

# ------------------------------------------------------------------------------
# Listings
# ------------------------------------------------------------------------------

# -A all except literal . ..
alias a='ls -A'

#
alias la='ls -AlG'

# Clear screen, list
alias cl='clear; l'

# Clear screen, list
alias cls='clear; ls'

#
alias l.='ls -d .[^.]*'

# Long listing, recent first, -G color
alias l='ls -lhGt'

#
alias lh="ls -lh"

# Long listing, human readable, no group info
alias ll='ls -lhG'

# Sort with recently modified first
alias lt='ls -lt'

# List only directories
alias lsd='ls -l | grep "^d"'

# Always use color output for `ls`
if [[ "$OSTYPE" =~ ^darwin ]]; then
  alias ls='command ls -G'
else
  alias ls='command ls --color'
fi

# ------------------------------------------------------------------------------
# IP address
# ------------------------------------------------------------------------------

alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias localip='ipconfig getifaddr en1'
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias whois='whois -h whois-servers.net'

# Flush Directory Service cache
if [[ "$OSTYPE" =~ ^darwin ]]; then
  alias flush='dscacheutil -flushcache'
fi

# ------------------------------------------------------------------------------
# Directory Shortcuts
# ------------------------------------------------------------------------------

alias d='cd ~/Documents/Dropbox'
alias p='cd ~/Projects'
alias g='git'
alias v='vim'

# ------------------------------------------------------------------------------
# Automated Housekeeping (Cleanup)
# ------------------------------------------------------------------------------

if [[ "$OSTYPE" =~ ^darwin ]]; then
  # Empty the Trash for
  alias emptytrash='rm -rfv ~/.Trash'

  # Recursively delete `.DS_Store` files
  alias cleanup="find . -name '*.DS_Store' -type f -ls -delete"
fi

# ------------------------------------------------------------------------------
# Git
# ------------------------------------------------------------------------------

alias ungit="find . -name '.git' -exec rm -rf {} \;"
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gco='git checkout'
alias gd='git diff'
alias gdm='git diff master'
alias gl='git pull'
alias gnp="git-notpushed"
alias gp='git push'
alias gst='git status'
alias gt='git status'
alias g='git status'
alias eg='mate .git/config'

# Undo a `git push`
alias undopush='git push -f origin HEAD^:master'

# ------------------------------------------------------------------------------
# Ruby on Rails
# ------------------------------------------------------------------------------

alias migrate='rake db:migrate && rake db:test:prepare'
